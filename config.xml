<?xml version='1.0' encoding='utf-8'?>
<widget id="HealthNote" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Health Note</name>
    <description>
        My app Health Note
    </description>
    <author email="sapchelkin@yandex.ru" href="">
        Pixoris
    </author>
    <content src="index.html" />

    <plugin name="cordova-plugin-camera" version="4.0.3" source="npm" />
    <plugin name="cordova-plugin-whitelist" source="npm" />
    <plugin name="cordova-plugin-splashscreen" source="npm" />
    <plugin name="cordova-plugin-media-capture" source="npm" />

    <preference name="orientation" value="portrait" />
    <preference name='phonegap-version' value='cli-7.1.0' />
    <preference name='pgb-builder-version' value='1' />
    <preference name="SplashScreenDelay" value="1500" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashScreenSpinnerColor" value="white" />
    <preference name="DisallowOverscroll" value="true" />

    <platform name="android">
        <icon qualifier="*" src="www/img/app-icon.png" />
        <splash qualifier="*" src="www/img/splash.png" />
    </platform>

    <access origin="" />
</widget>
